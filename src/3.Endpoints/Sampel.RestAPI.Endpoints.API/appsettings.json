{
  "ApplicationName": "Zamin",
  "ServiceId": "Sampel.RestAPI",
  "ServiceName": "Sampel.RestAPI",
  "ServiceVersion": "1.0.0",

  "ConnectionStrings": {
    "CommandDb_ConnectionString": "Server =.; Database=Sampel.RestAPIDb;User Id = sa;Password=1qaz!QAZ; MultipleActiveResultSets=true; Encrypt = false",
    "QueryDb_ConnectionString": "Server =.; Database=Sampel.RestAPIDb;User Id = sa;Password=1qaz!QAZ; MultipleActiveResultSets=true; Encrypt = false"
  },


  "Jwt": {
    "Issuer": "MyApi",
    "Audience": "MyApiUsers",
    "Key": "THIS_IS_A_SUPER_LONG_SECRET_KEY_123456",
    "ExpirationMinutes": 60
  },




  "ParrotTranslator": {
    "AutoCreateSqlTable": true,
    "ConnectionString": "Server =.; Database=Sampel.RestAPIDb;User Id = sa;Password=1qaz!QAZ; MultipleActiveResultSets=true; Encrypt = false",
    "SchemaName": "dbo",
    "TableName": "ParrotTranslations",
    "ReloadDataIntervalInMinuts": 1000
  },

  "WebUserInfo": {
    "DefaultUserId": -1
  },

  "AutoMapper": {
    "AssmblyNamesForLoadProfiles": "Sampel.RestAPI"
  },

  "PollingPublisher": {
    "ApplicationName": "Sampel.RestAPI",
    "SendCount": 100,
    "SendInterval": 1000,
    "ExceptionInterval": 10000
  },

  "PollingPublisherSqlStore": {
    "ConnectionString": "Server =.; Database=Sampel.RestAPIDb;User Id = sa;Password=1qaz!QAZ; MultipleActiveResultSets=true; Encrypt = false",
    "ApplicationName": "Sampel.RestAPI"
  },

  "MessageInbox": {
    "ApplicationName": "Sampel.RestAPI"
  },

  "MessageInboxSqlStore": {
    "AutoCreateSqlTable": true,
    "ConnectionString": "Server =.; Database=Sampel.RestAPIDb;User Id = sa;Password=1qaz!QAZ; MultipleActiveResultSets=true; Encrypt = false",
    "SchemaName": "dbo",
    "TableName": "MessageInbox"
  },

  "RabbitMq": {
    "PerssistMessage": false,
    "ExchangeName": "Sampel.RestAPIExchange",
    "ServiceName": "Sampel.RestAPI",
    "Url": "amqp://guest:guest@localhost:5672/"
  },

  "OAuth": {
    "Authority": "https://localhost:5000",
    "Audience": "Sampel.RestAPI",
    "RequireHttpsMetadata": true,
    "Scopes": {
      "Sampel.RestAPI": "Sampel.RestAPI"
    },
    "ValidateAudience": false,
    "ValidateIssuer": false,
    "ValidateIssuerSigningKey": false
  },

  "Swagger": {
    "Enabled": true,
    "SwaggerDoc": {
      "Version": "v1",
      "Title": "Sampel.RestAPI",
      "Name": "v1",
      "URL": "/swagger/v1/swagger.json"
    },
    "OAuth": {
      "Enabled": false,
      "AuthorizationUrl": "",
      "TokenUrl": "",
      "Scopes": {
        "MiniAggregateNameApi": "Sampel.RestAPI"
      }
    }
  },

  "SoftwarePart": {
    "ApplicationName": "Sampel.RestAPI",
    "ModuleName": "Sampel.RestAPI",
    "ServiceName": "Sampel.RestAPI",
    "DestinationServiceBaseAddress": "https://localhost:6000/",
    "DestinationServicePath": "api/SoftwarePart/Create",
    "OAuth": {
      "Enabled": true,
      "Authority": "https://localhost:5000",
      "ClientId": "Sampel.RestAPI",
      "ClientSecret": "secret"
    }
  },

  "OpenTeletmetry": {
    "ApplicationName": "Sampel.RestAPI",
    "ServiceId": "Sampel.RestAPI",
    "ServiceName": "Sampel.RestAPI",
    "ServiceVersion": "1.0.0",
    "AgentHost": "https://localhost:7000",
    "AgentPort": 6831
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Zamin": "Verbose"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\MiniAggregateName.Log.txt" }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "miniAggregateName-serilog-sample-index-{0:yyyy.MM}",
          "restrictedToMinimumLevel": "Verbose",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv6",
          "batchPostingLimit": 50,
          "period": 2,
          "inlineFields": true,
          "bufferFileSizeLimitBytes": 5242880,
          "bufferLogShippingInterval": 5000,
          "bufferRetainedInvalidPayloadsLimitBytes": 5000,
          "bufferFileCountLimit": 31,
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "queueSizeLimit": "100000"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
